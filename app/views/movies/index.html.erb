<div id="content">
	<h2>List of Movies</h2>
	<% @movies.each { |movie| %>
	<div class="post">
		<a href="#"><img src="<%= poster_url(movie) %>" width="100" height="150" class="poster"/></a>
		<h3><%= movie.title %></h3>
		<div>
			<div class="attributes_left">
				<strong>Online :</strong> <%= image_tag( movie.online ? "img05.png" : "img06.png", :width => 16, :height => 16)%>
				<br/>
				<strong>Year :</strong> <%= year_to_s(movie) %>
				<br/>
			</div>
			<div>
				<strong>Rank :</strong> <%= movie.rank %> / 10
				<br/>
				<strong>Seen :</strong> <%= movie.seen %> time(s)
				<br/>
			</div>
		</div>
	</div>
	<% } %>
	<br class="clearfix" />
	<%= paginate @movies %>
</div>